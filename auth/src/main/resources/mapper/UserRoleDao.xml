<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaotianchi.auth.dao.UserRoleDao">

    <resultMap type="com.gaotianchi.auth.entity.UserRole" id="UserRoleMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleCode" column="role_code" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserRoleMap">
        SELECT user_id,
               role_code
        FROM user_role
        WHERE user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryByPage" resultMap="UserRoleMap">
        SELECT
        user_id, role_code
        FROM user_role
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="roleCode != null">
                AND role_code = #{roleCode}
            </if>
        </where>
        LIMIT #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        SELECT count(1)
        FROM user_role
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="roleCode != null">
                AND role_code = #{roleCode}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        INSERT INTO user_role()
        VALUES ()
    </insert>

    <insert id="insertBatch" keyProperty="userId" useGeneratedKeys="true">
        INSERT INTO user_role()
        VALUES
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="userId" useGeneratedKeys="true">
        INSERT INTO user_role()
        VALUES
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        ON DUPLICATE KEY UPDATE

    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        UPDATE user_role
        <set>
        </set>
        WHERE user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        DELETE
        FROM user_role
        where user_id = #{userId}
    </delete>

</mapper>

